.landing-background {
  background: url(<%= asset_path "suero.jpg" %>);
  height: 750px;
  position: relative;
  top: 0;
}

.top-background {
  background: url(<%= asset_path "largo.jpg" %>) no-repeat top ;
  height: 700px;
  position: relative;
  top: 0;
}

.signin {
  background-color: white !important;
}

.case_thumb {
  width: 120px;
  margin-right: 10px;
  height: 120px;
  border: 3px solid #fff;
  border-radius: 3px;
}

.btn_landing {
  background-color: rgba(255, 255, 255, 0.6);
  border: 1px solid #428bca;
  color: #428bca;
  margin-left: 10px;
  padding: 3px 20px;
}

.btn_landing:hover {
  color: white;
  background-color: #428bca;
}

.btn_pill {
  background-color: #FF8C00;
  border: 4px solid white;
  color: white;
  border-radius: 30px;
  padding: 15px 55px;
  min-width: 150px;
  font-size: 17px;
}

.btn_pill:hover {
  color: white;
  border-color: white;
  background-color: rgba(0, 0, 155, 0.6);
}

.btn_pill_small {
  background-color: #FF8C00;
  border: 1px solid white;
  color: white;
  border-radius: 30px;
  padding: 5px 30px;
  min-width: 50px;
  font-size: 10px;
}

.btn_pill_small:hover {
  color: white;
  border-color: white;
  background-color: rgba(0, 0, 155, 0.6);
}

.margin_both {
  margin: 0 10px;
}

.topbar {
  padding: 15px 0;
  position: relative;
  background-color: rgba(0, 0, 0, 0.1);
  border-color: rgba(255, 255, 255, 0.23);
  width: 100%;
}

.section {
  margin: 100px;
}

.huge {
  font-size: 60px;
}

.divider_line {
  padding-bottom: 30px;
  margin-top: 30px;
  border-top: 1px solid rgba(255, 255, 255, 0.4);
}

.landing-content {
  margin-top: 30px;
}
.carrusel-block {
  margin-top: 30px;
  width: 100%;
  height: 150px;
}


.brand_topbar {
  display: inline-block;
  margin: 0;
  color: #636e7b;
}

.bkg-blue {
  background-color: #265EA5;
  color: white;
}

.team-picture {
  max-width: 200px;
  display: table;
  margin: 0 auto;
  border-radius: 50%;
  border: 5px solid #fff;
}

.huge-logo {
  width: 250px;
}

.landing-title {
  margin-top: 20px;
  font-size: 1.9em;
  color: #265EA5;
  font-weight: 800;
  text-align: center;
}

.landing-subtitle {
  font-size: 0.95em;
  text-align: center;
  color: #ccc;
  font-weight: 300;
  margin-bottom: 20px;
}

.blue-text {
  color: #265EA5;
  font-weight: 800;
}



.screen-img {
  width: 230px;
  margin: 0 auto;
  display: table;
}

.landing-logo {
  width: 50px;
}

.pasillo-bkg {
  padding: 10px 0;
  background: url(<%= asset_path "pasillo.jpg" %>) no-repeat center fixed;
  position: relative;
  color: white;
  width: 100%;
  height: 750px;
}

.suero-bkg {
  padding: 10px 0;
  background: url(<%= asset_path "suero.jpg" %>) no-repeat center fixed;
  position: relative;
  color: white;
  width: 100%;
  height: 750px;
}

.suero-fijo-bkg {
  padding: 10px 0;
  background: url(<%= asset_path "suero.jpg" %>) center fixed;
  position: relative;
  color: white;
  width: 100%;
  height: 750px;
}

.white-bkg {
  padding: 80px 0;
  position: relative;
  color: white;
  width: 100%;
  height: 700px;
}

.meet-the-team {
  margin-top: 0;
  margin-bottom: 20px;
}

.footer {
  background-color: #265EA5;
  color: #fff;
  width: 100%;
}

.footer a {
  color: #fff;
}

@media (min-width: 768px) {
  .landing-title {
    font-size: 1.9em;
  }

  .landing-subtitle {
    font-size: 0.95em;
  }
}

@media (min-width: 992px) {
  .landing-title {
    font-size: 2.4em;
  }

  .landing-subtitle {
    font-size: 1.0em;
  }
}

@media (min-width: 1200px) {
  .landing-title {
    font-size: 3.1em;
  }

  .landing-subtitle {
    font-size: 1.3em;
  }
}




