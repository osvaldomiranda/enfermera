.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Sistema de Votaciones Colegio Enfermeras
      .panel-body
        %h1 Detalle de votos
        %h2= @vows.first.vote.votacion
        %h3= @vows.first.vote.descripcion
        %br
        %hr
        %br
        .row
          .col-md-12
            .form-inline
              = label_tag :filter_candidate, 'Candidato'
              = select_tag :filter_candidate, options_for_select(Candidate.candidatos_options_for_select(@vows.first.vote), @candidate), prompt: 'Todos', class: "form-control"
        %br
        %hr    
        %br
        %table.table.table-striped
          %thead
            %tr
              %th Candidato
              %th Cod.Seguridad
              %th Voto Digital
        
          %tbody
            - @vows.each do |vow|
              %tr
                %td= vow.candidate.candidato
                %td= vow.token
                %td= link_to 'Ver', vow.vowfile_url, class: 'btn btn-info btn-xs'


  
