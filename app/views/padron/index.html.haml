.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body
        .container-fluid

          %hr
          = will_paginate @people, previous_label: h("<  "), next_label: h("  >")

          %table.table.table-striped
            %thead
              %tr
                %th N Registro
                %th Rut
                %th Nombre
                %th Lugar de Trabajo
                %th 
                %th
                %th
            %tbody
              - @people.each do |person|
                %tr
                  %td= person.nro_registro
                  %td= person.rut
                  %td= person.fullname
                  - if person.workplace.present?
                    %td= person.workplace.nombre
                  - else
                    %td  

                 
                 
