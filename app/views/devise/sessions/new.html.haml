.row
  .col-md-4.col-md-offset-4.text-center.logo-margin
    = image_tag("logo-top.png")
    %br
    %br
  .col-md-4.col-md-offset-4
    .login-panel.panel.panel-default
      .panel-heading
        %h3.panel-title Login
      .panel-body
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          .form-inputs
            %fieldset
              .form-group
                = f.input :rut, :required => false, :autofocus => true, input_html: { class: 'form-control' }
              .form-group
                = f.input :password, :required => false, input_html: { class: 'form-control' }
              .checkbox
                %label
                  = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Login", :class => "btn btn-lg btn-primary btn-block"
        .row
          .container
            %br
            %br
            .col-md-4
              = link_to new_inscription_path, class: 'btn btn_pill btn-block' do
                %i.glyphicon.glyphicon-user
