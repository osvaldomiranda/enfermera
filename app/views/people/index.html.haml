//    CODIGO OMIRANDA + BAD MERGE

.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-xs-12
            %h1
              Colegiadas
              %span.badge= @people.count
        .row
          .col-md-12
            .form-inline
              = label_tag :filter_estado, 'Estado'
              = select_tag :filter_estado, options_for_select(Person::ESTADOS.map{|e| [e[1], e[0]]}, @estado), prompt: 'Todos', class: "form-control"


        %h3 importar colegiadas 
        .form-group   
          %label.col-sm-2.control-label{:for => "textinput"}  Importar 
          = form_tag import_people_path, multipart: true do 
            = file_field_tag :file 
            = submit_tag "Importar" 

        %h3 update colegiadas 
        .form-group   
          %label.col-sm-2.control-label{:for => "textinput"}  Importar 
          = form_tag import_update_people_path, multipart: true do 
            = file_field_tag :file 
            = submit_tag "Importar" 


.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body
        .container-fluid

          %hr
          = will_paginate @people, previous_label: h("<  "), next_label: h("  >")

          %table.table.table-striped
            %thead
              %tr
                %th N Registro
                %th Email
                %th Rut
                %th Nombre
                %th Fecha Creación
                %th 
                %th
            %tbody
              - @people.each do |person|
                %tr
                  %td= person.nro_registro
                  %td= person.email
                  %td= person.rut
                  %td= person.fullname
                  %td= person.created_at.strftime('%d/%m/%Y %H:%M')
                  %td= link_to 'Ver', person,class: 'btn btn-info btn-xs'

                  - if person.estado == "OK"
                    %td= link_to ' Mostrar Certificado ', person.url , :target => '_blank', class: 'btn btn-info btn-xs'
                  - else
                    %td= link_to 'Confirmar Suscripción', "", class: 'btn btn-warning btn-xs' 
