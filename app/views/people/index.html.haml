.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body

        %h4 Importar Colegiadas
        = form_tag import_people_path, multipart: true do 
          = file_field_tag :file 
          %br
          = submit_tag "Importar" 

        %br
        %hr

        .row
          .col-md-12
            = simple_form_for(people_path,:method => :get ) do |f|
              .form-group  
                .col-sm-2
                  = f.input :nombre, label: false,  :input_html => {:style=> 'width: 180px'}
  
                .col-sm-2  
                  = f.button :submit, "Buscar",  class: "btn btn-primary"

            = link_to "Limpiar Busqueda","",  class: 'btn btn-info'
        %br
        %br

/%h2 Efermeras
.container{:role => "main"}
  .panel.panel-default
    .panel-heading
      %h2.panel-title Listado de enfermeras registradas
    .panel-body
      .container-fluid
        .container-fluid
          %tbody
            - @people.each do |person|
              %tr
                %td= person.email
                %td= person.rut

                %td= person.nombres
                %td= person.apellido_paterno
                %td= person.apellido_materno
                %td= person.created_at
                - if person.estado == "OK"
                  %td= link_to ' Mostrar Certificado ', person.url , :target => '_blank', class: "btn btn-primary btn-md active"
                - else
                  %td= link_to 'Confirmar Suscripción', edit_person_path(person), data: { modal: true }, :class => "btn btn-primary btn-md active" #data: { modal: true }, class: "btm btn-info btn-xs"   
                %td= link_to 'Cancelar Suscripción', edit_person_path(person), class: "btn btn-primary btn-md active"    
                         
                / %td= link_to 'Edit', edit_person_path(person)
                / %td= link_to 'Destroy', person, :method => :delete, :data => { :confirm => 'Estas seguro ?' }

        %br

        /= link_to 'Nuevo Cliente', new_person_path