= simple_form_for(@person) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :rut
    = f.input :first_name
    = f.input :last_name
    = f.input :gender
    = f.input :nationality
    = f.input :economic_activity
    = f.input :education
    / = f.input :origin_country
    / = f.input :resident_country
    = f.input :profession
    = f.input :dependents
    = f.input :university
    = f.input :number_of_children
    = f.input :marital_status
    = f.input :matrimonial_regime
    = f.input :date_birth

  .form-actions
    = f.button :submit
