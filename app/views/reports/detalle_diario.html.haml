.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-xs-12
            %h1
              Libro Diario
              %span.badge= @head_dailies.count
        %hr 

        %table.table.table-striped
          %thead
            %tr
              %th Numero
              %th Usuario
              %th Tipo
              %th Detalle
              %th Monto
              %th
              %th
              %th

          %tbody
            - @head_dailies.each do |head_daily|
              %tr
                %td= head_daily.numero
                %td= head_daily.user.email
                %th= head_daily.dailies.first.tipo
                %th= head_daily.dailies.first.por
                %td= head_daily.dailies.sum(:haber)
                %td= link_to 'Ver', head_daily