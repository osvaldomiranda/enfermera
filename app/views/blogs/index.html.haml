.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Noticias
      .panel-body
        .container-fluid
          = link_to 'Nueva Noticia', new_blog_path, class: 'btn btn-warning'

          - @blogs.each do |blog|
            %h3= "#{blog.titulo}"
            .row
              .col-md-12
                .col-md-2
                  %a.thumbnail{:href => ""}
                    - if blog.imagen.present?
                      %img{:alt => "...", :src =>"#{blog.imagen_url}"}
                .col-sm-8
                  %p= raw(blog.descripcion)
                .col-sm-2  
                = blog.estado  
                = link_to "Ver Documento",blog.documento_url,  class: 'btn btn-info'
                = link_to 'Editar', edit_blog_path(blog), class: 'btn btn-info'
                = link_to 'Eliminar', blog, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-info'
            %br
            %br   
          
