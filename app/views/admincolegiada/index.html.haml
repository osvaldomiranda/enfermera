= javascript_include_tag "//www.google.com/jsapi", "chartkick" 
%br
%br
%br
.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body
        %br
        .row
          .col-md-12.text-center
            = pie_chart @colegiada_ciudad 
        %br
        %br    
        .row
          .col-xs-12
            .row
              .col-xs-6
                .panel.panel-default
                  .panel-heading.text-center= Person.count
                  .panel-body.text-center
                    Total de Colegiadas

              .col-xs-6
                .panel.panel-default
                  .panel-heading.text-center= Person.where("created_at >= ?", Time.zone.now.beginning_of_month).count
                  .panel-body.text-center
                    Nuevas Colegiadas Mes en Curso  
            .row     
              .col-xs-6
                .panel.panel-default
                  .panel-heading.text-center= Fee.where("created_at >= ?", Time.zone.now.beginning_of_month).count
                  .panel-body.text-center
                    Cantidad Cuotas Registradas 
              .col-xs-6
                .panel.panel-default
                  .panel-heading.text-center= Fee.where("created_at >= ?", Time.zone.now.beginning_of_month).sum(:monto) 
                  .panel-body.text-center
                    Total Cuotas Registradas 
        %br
        %hr
        .row
          .col-sm-12.col-xs-12.editar.text-center
            = link_to 'Consulta Colegiada', people_path,  class: 'btn btn-info'
            = link_to 'Informe Superintendencia Salud', superintendencia_admincolegiada_index_path,  class: 'btn btn-info'
            / = link_to 'Aprobar Registro de Colegiatura', "",  class: 'btn btn-info'
           