.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body
        = form_tag "/report/export.xls" do
          = field_set_tag do

            = label_tag :Mes, 'Mes:'
            = month_field_tag "Mes", value = DateTime.now , options = {} 
            = submit_tag 'Exportar a Excel'
        %br
        %br
        %br
        %table.table.table-striped
          %thead
            %tr
              %th Nro.Registro
              %th Nombre
              %th Rut
              %th Email
          %tbody
            - Person.all.each do |person|
              %tr
                %td= person.id
                %td= person.fullname  
                %td= person.rut
                %td= person.email