= javascript_include_tag "//www.google.com/jsapi", "chartkick" 
.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Resumen Gastos
      .panel-body
        %br
        .row
          .col-md-12.text-center
            = bar_chart  @expenses
        .row
          .col-md-12.text-center  
            %h3 Resumen  
            %table.table.table-striped{:style=>"width: 50%", :align=>"center"}
              - @expenses.each  do |k,v|
                %tr
                  %td= k    
                  %td= number_to_currency(v, precision: 0, delimiter: "." ) 

        %br
        %br
