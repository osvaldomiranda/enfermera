.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Registrar Pago de Descuento de Cuotas
      .panel-body
        .container-fluid
          .row
            .col-md-12
              %form.form-horizontal{:role => "form"}
              = simple_form_for(@income, :url => "/workplaces/pay/payregister", :method => :get, html: { class: 'form-horizontal' }) do |f|
                = f.error_notification
                .form-inputs
                  .form-group    
                    %label.col-sm-2.control-label{:for => "textinput"} Lugar de trabajo
                    .col-sm-4
                      = f.input :workplace_id, label: false, collection: Workplace.workplaces_option_for_code(current_user), :input_html => {:style=> 'width: 180px'} 
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .pull-right
                        %button.btn.btn-success{:type => "submit"} Registrar Pago con Listado
                        / = link_to "Registrar Pago con Archivo", "" ,  class: 'btn btn-info'

