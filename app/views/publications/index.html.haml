%h1 Listing publications

%table
  %thead
    %tr
      %th Titulo
      %th Texto
      %th Resumen
      %th Imagen
      %th Tipo
      %th Documeto
      %th Estado
      %th
      %th
      %th

  %tbody
    - @publications.each do |publication|
      %tr
        %td= publication.titulo
        %td= publication.texto
        %td= publication.resumen
        %td= publication.imagen
        %td= publication.tipo
        %td= publication.documeto
        %td= publication.estado
        %td= link_to 'Show', publication
        %td= link_to 'Edit', edit_publication_path(publication)
        %td= link_to 'Destroy', publication, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

