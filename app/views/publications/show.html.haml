.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-xs-12
            %h1= @publication.tipo
            %p#notice= notice

            %p
              %b Titulo:
              = @publication.titulo
            %p
              %b Texto:
              = @publication.texto
            %p
              %b Resumen:
              = @publication.resumen
            %p
              %b Imagen:
              = @publication.imagen

            %p
              %b Documeto:
              = @publication.documeto

            %p
              %b web:
              = raw(@publication.web)


            = link_to 'Edit', edit_publication_path(@publication)
            \|
            = link_to 'Back', publications_path
