%h1 Listing jobs

%table
  %thead
    %tr
      %th Titulo
      %th Descripcion
      %th Contacto
      %th Estado
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.titulo
        %td= job.descripcion
        %td= job.contacto
        %td= job.estado
        %td= link_to 'Show', job
        %td= link_to 'Edit', edit_job_path(job)
        %td= link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

