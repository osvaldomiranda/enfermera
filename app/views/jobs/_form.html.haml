.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Oferta de Trabajo
      .panel-body
        .container-fluid

          = simple_form_for(@job) do |f|
            = f.error_notification

            .form-inputs
              = f.input :titulo
              = f.input :fecha
              = f.input :descripcion
              = f.input :contacto
              = f.input :estado, collection: Job.estado_options_for_select, selected:1

            .form-actions
              = f.button :submit, 'Guardar', class: 'btn btn-warning'
