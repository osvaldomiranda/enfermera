.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Oferta de Trabajo
      .panel-body
        .container-fluid

          = simple_form_for(@job) do |f|
            = f.error_notification

            .form-inputs
              = f.input :titulo
              = f.input :descripcion
              = f.input :contacto
              = f.input :estado, collection: Job.estado_options_for_select, selected:1
              = f.text_field :fecha_desde, id: 'datepicker', placeholder: 'Visible Desde'  
              = f.text_field :fecha_hasta, id: 'datepicker1', placeholder: 'Visible Hasta'  
         
            .form-actions
              = f.button :submit, 'Guardar', class: 'btn btn-warning'
            %br
            %br
            %br  
        = link_to 'Volver', jobs_path, class: 'btn btn-warning'