.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Env√≠o Manual Planillas de Descuento
      .panel-body
        .row
          .col-xs-12
            %h1
              Lugares de trabajo
              %span.badge= @workplaces.count
        .row
          .col-md-12
            .form-inline
              = label_tag :filter_regional, 'Regional'
              - if current_user.role?(:national_admin) 
                = select_tag :filter_regional, options_for_select(Office.options_for_select(current_user), @regional), prompt: 'Todos', class: "form-control"
              - else
                = select_tag :filter_regional, options_for_select(Office.options_for_select(current_user), @regional), class: "form-control"
        %br
        %br
        = will_paginate @workplaces, previous_label: h("<  "), next_label: h("  >")
        %br      
        %br
        %table.table.table-striped
          %thead
            %tr
              %th Nombre
              %th Ciudad
              %th Region
              %th
              %th
          %tbody
            - @workplaces.each do |workplace|
              %tr
                %td= workplace.nombre
                %td= workplace.ciudad
                %td= workplace.region
                %td= link_to 'Enviar Decuento', "/senddiscount/sendemail/#{workplace.id}", class: 'btn btn-info'
                %td= link_to 'Enviar Cobranza', "/senddiscount/sendretrieve/#{workplace.id}", class: 'btn btn-info'

 
