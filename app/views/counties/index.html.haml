%h1 Listing counties

%table
  %thead
    %tr
      %th Name
      %th State
      %th
      %th
      %th

  %tbody
    - @counties.each do |county|
      %tr
        %td= county.name
        %td= county.state
        %td= link_to 'Show', county
        %td= link_to 'Edit', edit_county_path(county)
        %td= link_to 'Destroy', county, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

