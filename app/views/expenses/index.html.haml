.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Registro de Gastos 
      .panel-body
        .container-fluid
          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th Fecha
                  %th Oficina
                  %th Monto
                  %th Tipo
                  %th Document
                  %th Descripcion
                  %th Mediopago
                  %th Office
                  %th Estado
                  %th
                  %th

              %tbody
                - @expenses.each do |expense|
                  %tr
                    %td= expense.fecha.strftime('%d/%m/%Y %H:%M')
                    - if expense.office.present?
                      %td= expense.office.nombre
                    - else
                      %td  
                    %td= expense.monto
                    %td= expense.tipo
                    %td= link_to 'Comprobante', expense.document_url, class: 'btn btn-info'
                    %td= expense.descripcion
                    %td= expense.mediopago
                    %td= expense.estado
                    %td= link_to 'Editar', edit_expense_path(expense), data: { modal: true },class: 'btn btn-info'
                    %td= link_to 'Eliminar', expense, :method => :delete, :data => { :confirm => 'Are you sure?' },class: 'btn btn-info'

            %br

            = link_to 'Registrar Gasto', new_expense_path, data: { modal: true },  class: 'btn btn-info'
            %br
            %br
