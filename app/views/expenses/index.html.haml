.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Cuenta Corriente
      .panel-body
        .row
          .col-md-12
            = simple_form_for(people_path,:method => :get ) do |f|
              .form-group  
                .col-sm-2
                  = f.input :nombre, label: false,  :input_html => {:style=> 'width: 180px'}
  
                .col-sm-2  
                  = f.button :submit, "Buscar",  class: "btn btn-primary"

            = link_to "Limpiar Busqueda","",  class: 'btn btn-info'
        %br
        %br

.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Registro de Gastos 
      .panel-body
        .container-fluid
          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th Fecha
                  %th Monto
                  %th Tipo
                  %th Document
                  %th Descripcion
                  %th Mediopago
                  %th Office
                  %th User
                  %th Estado
                  %th
                  %th

              %tbody
                - @expenses.each do |expense|
                  %tr
                    %td= expense.fecha
                    %td= expense.monto
                    %td= expense.tipo
                    %td= expense.document
                    %td= expense.descripcion
                    %td= expense.mediopago
                    %td= expense.office.nombre
                    %td= "osvaldo.omiranda@gmail.com"
                    %td= expense.estado
                    %td= link_to 'Editar', edit_expense_path(expense)
                    %td= link_to 'Eliminar', expense, :method => :delete, :data => { :confirm => 'Are you sure?' }

            %br

            = link_to 'Registrar Gasto', new_expense_path, class: 'btn btn-info'
