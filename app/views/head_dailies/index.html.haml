.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-xs-12
            %h1
              Libro Diario
              %span.badge= @head_dailies.count
        .row
          .col-md-12
            .form-inline
              = select_tag :filter_tipo, options_for_select([['Egresos', 'EGRESO'],['Ingresos', 'INGRESO']], @tipo), prompt: 'Todos', class: "form-control"
        %br    
        %hr 
        = link_to 'Crear Egreso', head_dailies_path(head_daily: {numero: HeadDaily.next_egreso, tipo: 'EGRESO', user: current_user}), :method => :post, class: 'btn btn-info' 
        
        = link_to 'Crear Ingreso', head_dailies_path(head_daily: {numero: HeadDaily.next_ingreso, tipo: 'INGRESO', user: current_user}), :method => :post, class: 'btn btn-info' 

        %br
        %br
        %hr

        %table.table.table-striped
          %thead
            %tr
              %th Numero
              %th Fecha
              %th Tipo
              %th Detalle
              %th Monto
              %th
              %th
              %th

          %tbody
            - @head_dailies.each do |head_daily|
              - if head_daily.dailies.present?
                %tr
                  %td= head_daily.numero
                  %td= head_daily.dailies.first.fecha
                  %th= head_daily.dailies.first.tipo
                  %th= head_daily.dailies.first.por
                  %td= head_daily.dailies.sum(:haber)
                  %td= link_to 'Ver', head_daily
                  %td= link_to 'Documento', head_daily.documento_url
                  %td= link_to 'PDF', showtopdf_head_daily_path(head_daily.id), class: 'btn btn-success'

        %br

