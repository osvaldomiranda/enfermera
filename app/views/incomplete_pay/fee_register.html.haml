.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-xs-12
            %h1
              Registro de cuotas, a partir de pagos incompletos
        
        %br      
        .row
          .col-md-12
            %h2= @people.full_name
            %h3= @people.nro_registro
        %br      
        .row
          .col-md-6
            %h1
              Pagos incompletos
              %span.badge= @incomes.count
          .col-md-6
            %h1
              Total
              %span.badge= "$#{@incomes.sum(monto)}"
        %hr      
        .row
          .col-md-6
            %h1
              Cuotas generadas
              %span.badge= @fees.count
          .col-md-6
            %h1
              Total
              %span.badge= "$#{@fees.sum(monto)}"