.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Directorios Regionales
      .panel-body
        .container-fluid
          %h1 Directorios Regionales 
          - if current_user.present?
            .row
              %hr
              = simple_form_for(@regional_council) do |f|
                = f.error_notification

                .form-inputs
                  = f.input :nombre
                  = f.input :cargo
                  = f.input :email
                  = f.input :fono
                  = f.input :office_id, collection: Office.options_for_select(current_user)
                  = f.input :person_id, collection: Person.regional_admin_for_select

                .form-actions
                  = f.button :submit, 'Guardar'
