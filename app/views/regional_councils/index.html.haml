.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Consejos Regionales
      .panel-body
        .container-fluid
          %h1 Directorios Regionales 
          - if current_user.present?
            = link_to 'Crear nuevo directorio', new_regional_council_path, class: 'btn btn-warning'


            - @regional_councils.each do |regional_councils|
              %h1= regional_councils.office.nombre
              = raw(regional_councils.web)
              = link_to 'Ver', regional_councils
              - if current_user.role?(:web)
                = link_to 'Editar', edit_regional_council_path(regional_councils)
                = link_to 'Eliminar', regional_councils, :method => :delete, :data => { :confirm => 'Are you sure?' }
              %hr  

