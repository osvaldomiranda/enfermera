  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Colegiadas
      .panel-body
        .container-fluid

          %hr
          .digg_pagination
            = will_paginate @people, previous_label: h("<  "), next_label: h("  >")

