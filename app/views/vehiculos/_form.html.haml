              %label.col-sm-2.control-label{:for => "textinput"} Marca
              .col-sm-4
                = f.input :marca, label: false
              %label.col-sm-2.control-label{:for => "textinput"} Modelo
              .col-sm-4
                = f.input :modelo, label: false
