.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Cuenta Corriente
      .panel-body
        %h3= "Saldo actual: $#{@saldo}.-"
        %h4= "Total Ingresos: $#{@incomevalue}.-"
        %h4= "Total Egresos: $#{@expensevalue}.-"
        %hr
        .row
          .col-md-12
            = simple_form_for(people_path,:method => :get ) do |f|
              .form-group  
                .col-sm-2
                  = f.input :nombre, label: false,  :input_html => {:style=> 'width: 180px'}
  
                .col-sm-2  
                  = f.button :submit, "Buscar",  class: "btn btn-primary"

            = link_to "Limpiar Busqueda","",  class: 'btn btn-info'
        %br
        %br

.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Cuenta Corriente 
      .panel-body
        .container-fluid
          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th Fecha
                  %th Tipo
                  %th Monto
                  %th Codigo
                  %th Account
                  %th User
                  %th Office
                  %th Income
                  %th Expense
              %tbody
                - @officeaccounts.each do |officeaccount|
                  %tr
                    %td= officeaccount.fecha
                    %td= officeaccount.tipo
                    %td= officeaccount.monto
                    %td= officeaccount.codigo
                    %td= officeaccount.account
                    %td= officeaccount.user.email
                    %td= officeaccount.office.nombre
                    %td= officeaccount.incomevalue
                    %td= officeaccount.expensevalue

