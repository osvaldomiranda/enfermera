.container-fluid
  %h2 Bien Raiz
  .container-fluid
    .row
      .col-md-12
        %form.form-horizontal{:role => "form"}
        = simple_form_for(@bienes_raice, html: { class: 'form-horizontal' }) do |f|
          .form-inputs
            .form-group
              %label.col-sm-2.control-label{:for => "textinput"} Tipo
              .col-sm-4
                = f.input :tipo, label: false, collection: BienesRaice.tipobien_options_for_select
            .form-group
              %label.col-sm-2.control-label{:for => "textinput"} Direccion
              .col-sm-4
                = f.input :direccion, label: false
              %label.col-sm-2.control-label{:for => "textinput"} Valor comercial
              .col-sm-4
                = f.input :valor_comercial, label: false
            .form-group
              %label.col-sm-2.control-label{:for => "textinput"} Rol
              .col-sm-4
                = f.input :rol, label: false
              %label.col-sm-2.control-label{:for => "textinput"} Hipoteca banco
              .col-sm-4
                = f.input :hipoteca_banco, label: false  
            .form-group
              .col-sm-offset-2.col-sm-10
                .pull-right
                  %button.btn.btn-success{:type => "submit"} Guardar                                              



